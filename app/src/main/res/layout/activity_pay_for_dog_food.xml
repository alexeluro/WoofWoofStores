<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayForDogFood"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="top"
        android:background="@drawable/primary_rounded_bg">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/dog_food_image"
            android:src="@drawable/dog_food_2"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/contact_bg"
        android:padding="20dp"
        android:layout_marginTop="-20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_horizontal"
        android:clipChildren="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pay_for_dog_food_name"
            android:text="Dog Food"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pay_for_dog_food_cost"
                android:text="$20"
                android:textSize="20sp"
                android:textStyle="normal"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/reduce_quantity"
                android:background="@drawable/quantity_btn_bg"
                android:text="@string/reduceQuantity"
                android:textSize="25sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quantity"
                android:text="1"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:fontFamily="@font/roboto"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/increase_quantity"
                android:background="@drawable/quantity_btn_bg"
                android:text="@string/increaseQuantity"
                android:textSize="25sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pay_for_dog_food_buy_now"
                android:layout_weight="2"
                android:text="buy now"
                android:textColor="@color/white"
                android:layout_marginEnd="5dp"
                android:background="@drawable/login_btn_bg"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pay_for_dog_food_add_to_cart"
                android:layout_weight="2"
                android:text="add to cart"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:background="@drawable/login_btn_bg"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>